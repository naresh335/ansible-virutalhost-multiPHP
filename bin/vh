#! /usr/bin/env bash

helpFunction()
{
   echo ""
   echo -e 'Usage: \n\tansible-playbook ~/vh/setup.yaml -K --extra-vars "directory=projects php_version=7.4 url=app.test" --tags "phpinfo"'
   echo -e "\t---"
   echo -e "\t-php_version php version for your project installation"
   echo -e "\t-directory directory path in your home directory"
   echo -e "\t-url url for your project"
   echo -e ""
   echo -e "\t Example for creating virtualhost with laravel or wordpress or phpmyadmin"
   echo -e '\t (please use one of the options e.g. --tags "wordpress")'
   echo -e '\t ansible-playbook ~/vh/setup.yaml -K --extra-vars "directory=projects php_version=7.4 url=app.test" --tags "laravel"' 
   echo -e ""
   echo -e "\t Example for creating virtualhost with specific laravel version"
   echo -e '\t (please specify version as 5.8|6.*|7.*|8.* e.g. --extra-vars "laravel_version=6.*")'
   echo -e '\t ansible-playbook ~/vh/setup.yaml -K --extra-vars "directory=projects php_version=7.4 url=app.test laravel_version=6.*" --tags "laravel_version"' 
   echo -e ""
   echo -e "\t Example for updating virtualhost url"
   echo -e '\t ansible-playbook ~/vh/setup.yaml -K --extra-vars "php_version=7.2 directory=projects url=app2.test" --tags "change-url"' 
   echo -e ""
   echo -e "\t Example for removing virtual host"
   echo -e '\t ansible-playbook ~/vh/setup.yaml -K --extra-vars "old_url=app.test" --tags "remove-url"'
   echo -e ""
   echo -e "\t Updating this script" 
   echo -e '\t vh -u' 
   exit 1 # Exit script after printing help
}

selfUpdate()
{
   curl -L https://git.io/JYnOL | sh
   exit 1
}

if [ ${1:-h} = "-u" ] || [ "${1:-h}" = "-U" ]; then
  selfUpdate
else
  helpFunction
fi

echo "Help for ansible virtualhost configuration script";
helpFunction
